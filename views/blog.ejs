            <h5 class="card-title text-center fw-bold"><%=posts[i].title%></h5>
            <h6 class="card-text text-center text-light"><%-posts[i].body.substring(0,15)+"..."%></h6>
            <a href="/post/<%=posts[i].title%>" class="btn btn-outline-info d-block">Readmore</a>
          </div>
        </div>
